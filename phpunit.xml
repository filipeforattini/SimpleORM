<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         bootstrap="./vendor/autoload.php"
         colors="false"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="false">
    <php>
        <env name="sqlite_database" value="database.sqlite"/>
        <env name="table_lines" value="10"/>
    </php>
    <testsuites>
        <testsuite>
            <file>tests/EntityTests.php</file>
            <file>tests/RepositoryTests.php</file>
        </testsuite>
    </testsuites>
</phpunit>
